<div class="container" style="margin-top: 2em;">
	<form action="/crear?rol={{rol}}" method="post">
		<fieldset>
			<div class="container" style="margin-bottom: 3em;">
				<legend>Administrar Cursos</legend>

				{{#if (alertaValidarCampos resultado.boton 'crear')}}
					<div class="row">
						<div class="bs-component">
							<div class="alert alert-dismissible alert-{{mostrarAlerta resultado}}">
								<button type="button" class="close" data-dismiss="alert">Ã—</button>
								<strong>{{resultado.estado}}!</strong> {{resultado.msg}}
							</div>
						</div>
					</div>
				{{/if}}
				<div class="row">
					<div class="form-group col{{validarCampos resultado formulario 'nombre' 'has-danger' 'crear'}}">
						<label for="nombre">Nombre</label>
						<input type="text" class="form-control{{validarCampos resultado formulario 'nombre' 'is-invalid' 'crear'}}" placeholder="Nombre" id="nombre" name="nombre" value="{{formulario.nombre}}">
					</div>
					<div class="form-group col{{validarCampos resultado formulario 'id' 'has-danger' 'crear'}}">
						<label for="id">ID Curso</label>
						<input type="text" class="form-control{{validarCampos resultado formulario 'id' 'is-invalid' 'crear'}}" placeholder="ID Curso" id="id" name="id" value="{{formulario.id}}">
					</div>
				</div>
				<div class="row">
					<div class="form-group col{{validarCampos resultado formulario 'descripcion' 'has-danger' 'crear'}}">
						<label for="descripcion">Descripcion</label>
						<textarea name="descripcion" class="form-control{{validarCampos resultado formulario 'descripcion' 'is-invalid' 'crear'}}" id="descripcion" rows="3">{{formulario.descripcion}}</textarea>
					</div>
					<div class="form-group col {{validarCampos resultado formulario 'valor' 'has-danger' 'crear'}}">
						<label for="valor">Valor</label>
						<input type="text" name="valor" class="form-control {{validarCampos resultado formulario 'valor' 'is-invalid' 'crear'}}" id="valor" placeholder="Valor" value="{{formulario.valor}}">
					</div>
				</div>
				<div class="row">
					<div class="form-group col">
						<label for="modalidad">Modalidad</label>
						<select name="modalidad" class="form-control" id="modalidad" value="{{formulario.modalidad}}">
							<option value="">Seleccionar...</option>
							<option value="Presencial">Presencial</option>
							<option value="Virtual">Virtual</option>
						</select>
					</div>
					<div class="form-group col">
						<label for="intensidad">Intensidad</label>
						<input type="text" name="intensidad" id="intensidad" class="form-control" placeholder="Intensidad" value="{{formulario.intensidad}}">
					</div>
				</div>
				<button class="btn btn-secondary" name="boton" value="crear">Crear</button>
				<button class="btn btn-secondary" name="boton" value="limpiarCursos">Limpiar Campos</button>
			</div>
		</fieldset>
	</form>
</div>